<?xml version='1.0'?>

<!--
Two-node "ping" society definition.
-->
<society>

  <node name="Node1">

    <!-- Agent "NameServer" will be our society-wide naming service -->
    <agent name="NameServer">
      <component class='org.cougaar.core.wp.server.Server'/>
    </agent>

    <agent name="A">
      <component class="org.getalp.blexisma.ping.PingSender">
        <argument name="target" value="B"/>
      </component>
      <component class="org.getalp.blexisma.ping.PingServlet">
        <argument name="path" value="/ping"/>
      </component>
    </agent>
  </node>

  <node name="Node2">
    <agent name="B">
      <component class="org.getalp.blexisma.ping.PingReceiver"/>
    </agent>
  </node>

</society>
