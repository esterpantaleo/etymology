<?xml version='1.0'?>

<!--
Single-node "ping" society definition.
-->
<society>

  <node name="Node1">

    <agent name="A">
      <!-- This plugin sends the ping to agent "B" -->
      <component class="org.getalp.blexisma.ping.PingSender">
        <argument name="target" value="B"/>
      </component>

      <!-- Our servlet to view the blackboard -->
      <component class="org.getalp.blexisma.ping.PingServlet">
        <argument name="path" value="/ping"/>
      </component>
    </agent>

    <agent name="B">
      <!-- This plugin replies to pings from any sender -->
      <component class="org.getalp.blexisma.ping.PingReceiver"/>
      
    </agent>

  </node>

</society>
